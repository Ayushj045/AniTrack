<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAnime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:id="@+id/ivAnimePic"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvAnimeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sofiaprosoftbold"
                android:maxLines="3"
                android:text="Naruto"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cardAnime"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sofiaprosoftmedium"
                android:text="7.3"
                android:textColor="@color/grey"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/tvAnimeName"
                app:layout_constraintTop_toBottomOf="@id/tvAnimeName" />

            <TextView
                android:id="@+id/tvSeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sofiaprosoftmedium"
                android:text="2003-2004"
                android:textColor="@color/grey"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/tvRating"
                app:layout_constraintTop_toBottomOf="@id/tvRating" />

            <TextView
                android:id="@+id/tvEpisodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sofiaprosoftmedium"
                android:text="131"
                android:textColor="@color/grey"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/tvSeason"
                app:layout_constraintTop_toBottomOf="@id/tvSeason" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sofiaprosoftmedium"
                android:text="Airing"
                android:textColor="@color/grey"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/tvEpisodes"
                app:layout_constraintTop_toBottomOf="@id/tvEpisodes" />


            <TextView
                android:id="@+id/tvKnowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/sofiaprosoftmedium"
                android:text="Know More"
                android:textColor="@color/material_blue"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/tvStatus"
                app:layout_constraintTop_toBottomOf="@id/tvStatus" />

            <TextView
                android:id="@+id/tvWatchTrailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofiaprosoftmedium"
                android:text="Watch Trailer"
                android:textColor="@color/material_red"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvKnowMore"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvKnowMore"
                app:layout_constraintTop_toTopOf="@+id/tvKnowMore" />

            <TextView
                android:id="@+id/tvSynText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sofiaprosoftbold"
                android:padding="8dp"
                android:text="Synopsis: "
                android:textColor="@color/dark"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardAnime" />

            <TextView
                android:id="@+id/tvSynopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/sofiaprosoftregular"
                android:text="@string/synopsis_test"
                android:textColor="@color/dark"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tvSynText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>